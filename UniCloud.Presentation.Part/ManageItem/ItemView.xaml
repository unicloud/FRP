<UserControl x:Class="UniCloud.Presentation.Part.ManageItem.ItemView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
             xmlns:uc="http://schemas.unicloud.com/2012/xaml/presentation"
             xmlns:ei="http://schemas.microsoft.com/expression/2010/interactions"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:input="clr-namespace:UniCloud.Presentation.Input;assembly=UniCloud.Presentation"
             mc:Ignorable="d"
             d:DesignHeight="600"
             d:DesignWidth="800"
             d:DataContext="{d:DesignInstance uc:ItemVm}"
             Name="ManageItemView">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/UniCloud.Presentation;component/Resources/UcStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <Style x:Key="EditComboBox"
                   TargetType="telerik:RadComboBox">
                <Setter Property="FontFamily"
                        Value="Microsoft YaHei UI" />
                <Setter Property="FontSize"
                        Value="13" />
                <Setter Property="VerticalAlignment"
                        Value="Center" />
                <Setter Property="OpenDropDownOnFocus"
                        Value="True" />
            </Style>
            <DataTemplate x:Key="CtrlUnitsTemplate">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{Binding Name}" />
                    <TextBlock Text="(" />
                    <TextBlock Foreground="#003366"
                               Text="{Binding Description}" />
                    <TextBlock Text=")" />
                </StackPanel>
            </DataTemplate>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <telerik:RadDocking BorderThickness="0"
                            Padding="0"
                            HasDocumentHost="False"
                            FlowDirection="LeftToRight">
            <telerik:RadSplitContainer Orientation="Vertical">
                <telerik:RadSplitContainer Orientation="Vertical">
                    <telerik:RadPaneGroup telerik:ProportionalStackPanel.RelativeSize="600,450">
                        <telerik:RadPane Header="附件项"
                                         IsPinned="True"
                                         CanFloat="False"
                                         CanUserClose="False"
                                         CanUserPin="False"
                                         FontSize="{StaticResource TextFontSize}"
                                         ContextMenuTemplate="{x:Null}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition />
                                    <RowDefinition Height="30" />
                                </Grid.RowDefinitions>
                                <telerik:RadToolBar HorizontalAlignment="Stretch"
                                                    Margin="-1 -2 -1 0"
                                                    OverflowButtonVisibility="Collapsed">
                                    <telerik:RadButton Margin="4,2,2,-2"
                                                       Command="{Binding SaveCommand}">
                                        <Image Source="/UniCloud.Presentation;component/Images/Save.png"
                                               Stretch="Fill"
                                               ToolTipService.ToolTip="保存" />
                                    </telerik:RadButton>
                                    <telerik:RadButton Margin="2,2,2,-2"
                                                       Command="{Binding AbortCommand}">
                                        <Image Source="/UniCloud.Presentation;component/Images/Rotate.png"
                                               Stretch="Fill"
                                               ToolTipService.ToolTip="放弃更改" />
                                    </telerik:RadButton>
                                    <telerik:RadToolBarSeparator />
                                    <telerik:RadButton Margin="2,2,2,-2"
                                                       Command="{Binding NewCommand}">
                                        <Image Source="/UniCloud.Presentation;component/Images/New.png"
                                               Stretch="Fill"
                                               ToolTipService.ToolTip="创建附件项" />
                                    </telerik:RadButton>
                                    <telerik:RadButton Margin="2,2,2,-2"
                                                       Command="{Binding RemoveCommand}">
                                        <Image Source="/UniCloud.Presentation;component/Images/Delete.png"
                                               Stretch="Fill"
                                               ToolTipService.ToolTip="删除附件项" />
                                    </telerik:RadButton>
                                </telerik:RadToolBar>
                                <telerik:RadGridView x:Name="Items"
                                                     Grid.Row="1"
                                                     AutoExpandGroups="True"
                                                     ShowGroupPanel="False"
                                                     AutoGenerateColumns="False"
                                                     CanUserSortColumns="True"
                                                     CanUserFreezeColumns="False"
                                                     RowIndicatorVisibility="Collapsed"
                                                     CanUserResizeColumns="False"
                                                     IsFilteringAllowed="True"
                                                     IsReadOnly="False"
                                                     ItemsSource="{Binding Items,Mode=TwoWay}"
                                                     SelectedItem="{Binding SelItem,Mode=TwoWay}"
                                                     IsBusy="{Binding Items.IsBusy}">
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="CellEditEnded">
                                            <i:InvokeCommandAction Command="{Binding ItemIsLifeChanged}"
                                                                   CommandParameter="{Binding ElementName=Items}" />
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                    <telerik:RadContextMenu.ContextMenu>
                                        <telerik:RadContextMenu>
                                            <telerik:RadMenuItem Header="导出Excel"
                                                                 Command="{Binding ExcelExportCommand}"
                                                                 CommandParameter="{Binding ElementName=Items, Mode=OneWay}" />
                                            <telerik:RadMenuItem Header="导出Word"
                                                                 Command="{Binding WordExportCommand}"
                                                                 CommandParameter="{Binding ElementName=Items, Mode=OneWay}" />
                                        </telerik:RadContextMenu>
                                    </telerik:RadContextMenu.ContextMenu>
                                    <telerik:RadGridView.Columns>
                                        <input:DataPageSerialColumn Header="序号"
                                                                    HeaderTextAlignment="Center" />
                                        <telerik:GridViewDataColumn Header="项名称"
                                                                    HeaderTextAlignment="Center"
                                                                    MinWidth="{StaticResource GridViewColumnsWidth}"
                                                                    DataMemberBinding="{Binding Name}" />
                                        <telerik:GridViewDataColumn Header="项号"
                                                                    HeaderTextAlignment="Center"
                                                                    MinWidth="{StaticResource GridViewColumnsWidth}"
                                                                    DataMemberBinding="{Binding ItemNo}" />
                                        <!--<telerik:GridViewDataColumn Header="功能标识号"
                                                                    HeaderTextAlignment="Center"
                                                                    MinWidth="{StaticResource GridViewColumnsWidth}"
                                                                    DataMemberBinding="{Binding FiNumber}" />-->
                                        <telerik:GridViewCheckBoxColumn Header="是否寿控项"
                                                                        HeaderTextAlignment="Center"
                                                                        MinWidth="{StaticResource GridViewColumnsWidth}"
                                                                        DataMemberBinding="{Binding IsLife}"
                                                                        UniqueName="IsLife" />
                                        <telerik:GridViewDataColumn Header="描述"
                                                                    HeaderTextAlignment="Center"
                                                                    MinWidth="{StaticResource GridViewColumnsWidth}"
                                                                    DataMemberBinding="{Binding Description}" />
                                    </telerik:RadGridView.Columns>
                                </telerik:RadGridView>
                                <Grid Row="2">
                                    <telerik:RadDataPager Name="SnPage"
                                                          BorderThickness="1,0,1,1"
                                                          AutoEllipsisMode="Both"
                                                          DisplayMode="All"
                                                          Source="{Binding Items}" />
                                </Grid>
                            </Grid>
                        </telerik:RadPane>
                    </telerik:RadPaneGroup>
                </telerik:RadSplitContainer>
                <telerik:RadSplitContainer Orientation="Horizontal">
                    <telerik:RadPaneGroup VerticalAlignment="Stretch"
                                          telerik:ProportionalStackPanel.RelativeSize="600,350">
                        <telerik:RadPane Header="项维修控制策略"
                                         PaneHeaderVisibility="Collapsed"
                                         CanFloat="False"
                                         CanUserClose="False"
                                         CanUserPin="False"
                                         FontSize="{StaticResource TextFontSize}"
                                         ContextMenuTemplate="{x:Null}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition />
                                </Grid.RowDefinitions>
                                <telerik:RadToolBar HorizontalAlignment="Stretch"
                                                    Margin="-1 -2 -1 0"
                                                    OverflowButtonVisibility="Collapsed">
                                    <telerik:RadButton Margin="4,2,2,-2"
                                                       Command="{Binding AddMaintainCtrlCommand}">
                                        <Image Source="/UniCloud.Presentation;component/Images/Add.png"
                                               Stretch="Fill"
                                               ToolTipService.ToolTip="添加维修控制" />
                                    </telerik:RadButton>
                                    <telerik:RadButton Margin="2,2,2,-2"
                                                       Command="{Binding RemoveMaintainCtrlCommand}">
                                        <Image Source="/UniCloud.Presentation;component/Images/Remove.png"
                                               Stretch="Fill"
                                               ToolTipService.ToolTip="移除维修控制" />
                                    </telerik:RadButton>
                                </telerik:RadToolBar>
                                <telerik:RadGridView x:Name="ViewItemMaintainCtrls"
                                                     ShowGroupPanel="False"
                                                     AutoExpandGroups="True"
                                                     IsReadOnly="False"
                                                     Grid.Row="1"
                                                     CanUserFreezeColumns="False"
                                                     RowIndicatorVisibility="Collapsed"
                                                     CanUserResizeColumns="False"
                                                     IsFilteringAllowed="False"
                                                     ItemsSource="{Binding ViewItemMaintainCtrls,Mode=TwoWay}"
                                                     SelectedItem="{Binding SelItemMaintainCtrl,Mode=TwoWay}"
                                                     IsBusy="{Binding ItemMaintainCtrls.IsBusy}"
                                                     AutoGenerateColumns="False"
                                                     ShowColumnFooters="True">
                                    <telerik:RadContextMenu.ContextMenu>
                                        <telerik:RadContextMenu>
                                            <telerik:RadMenuItem Header="导出Excel"
                                                                 Command="{Binding ExcelExportCommand}"
                                                                 CommandParameter="{Binding ElementName=ViewItemMaintainCtrls, Mode=OneWay}" />
                                            <telerik:RadMenuItem Header="导出Word"
                                                                 Command="{Binding WordExportCommand}"
                                                                 CommandParameter="{Binding ElementName=ViewItemMaintainCtrls, Mode=OneWay}" />
                                        </telerik:RadContextMenu>
                                    </telerik:RadContextMenu.ContextMenu>
                                    <telerik:RadGridView.Columns>
                                        <input:DataPageSerialColumn Header="序号"
                                                                    HeaderTextAlignment="Center" />
                                        <telerik:GridViewComboBoxColumn Header="控制策略"
                                                                        MinWidth="{StaticResource GridViewColumnsWidth}"
                                                                        ItemsSource="{Binding DataContext.ControlStrategies, ElementName=ManageItemView}"
                                                                        DisplayMemberPath="Value"
                                                                        DataMemberBinding="{Binding CtrlStrategy,Mode=TwoWay}"
                                                                        SelectedValueMemberPath="Key"
                                                                        IsComboBoxEditable="True"
                                                                        EditorStyle="{StaticResource EditComboBox}" />
                                        <telerik:GridViewComboBoxColumn Header="工作代码"
                                                                        MinWidth="{StaticResource GridViewColumnsWidth}"
                                                                        ItemsSource="{Binding DataContext.MaintainWorks, ElementName=ManageItemView}"
                                                                        DisplayMemberPath="WorkCode"
                                                                        DataMemberBinding="{Binding MaintainWorkId,Mode=TwoWay}"
                                                                        SelectedValueMemberPath="Id"
                                                                        IsComboBoxEditable="True"
                                                                        EditorStyle="{StaticResource EditComboBox}" />
                                        <telerik:GridViewDataColumn Header="控制描述"
                                                                    HeaderTextAlignment="Center"
                                                                    MinWidth="{StaticResource GridViewColumnsWidth}"
                                                                    DataMemberBinding="{Binding Description}" />
                                    </telerik:RadGridView.Columns>
                                </telerik:RadGridView>
                            </Grid>
                        </telerik:RadPane>
                    </telerik:RadPaneGroup>
                    <telerik:RadPaneGroup VerticalAlignment="Stretch"
                                          telerik:ProportionalStackPanel.RelativeSize="600,350">
                        <telerik:RadPane Header="项维修控制明细"
                                         PaneHeaderVisibility="Collapsed"
                                         CanFloat="False"
                                         CanUserClose="False"
                                         CanUserPin="False"
                                         FontSize="{StaticResource TextFontSize}"
                                         ContextMenuTemplate="{x:Null}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="30" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="0">
                                    <StackPanel Orientation="Horizontal"
                                                VerticalAlignment="Stretch"
                                                HorizontalAlignment="Stretch"
                                                Margin="10 0 0 0">
                                        <TextBlock Text="控制类型"
                                                   TextAlignment="Left"
                                                   FontSize="{StaticResource TextFontSize}" />
                                        <telerik:RadComboBox x:Name="CtrlTypes"
                                                             MinWidth="150"
                                                             ClearSelectionButtonVisibility="Visible"
                                                             ClearSelectionButtonContent="清除选择"
                                                             SelectedValuePath="TypeId"
                                                             DisplayMemberPath="Description"
                                                             ItemsSource="{Binding CtrlTypes}"
                                                             SelectedItem="{Binding SelCtrlType, Mode=TwoWay}" />
                                    </StackPanel>
                                </Grid>
                                <Grid Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Orientation="Horizontal"
                                                Grid.Column="0"
                                                Visibility="{Binding FirstVisible}">
                                        <TextBlock Text="自"
                                                   Margin="2,0,0,0"
                                                   VerticalAlignment="Center"
                                                   FontSize="{StaticResource TextFontSize}" />
                                        <telerik:RadTimePicker InputMode="DatePicker"
                                                               SelectedValue="{Binding StartDate, Mode=TwoWay}" />
                                        <TextBlock Text="起，"
                                                   VerticalAlignment="Center"
                                                   FontSize="{StaticResource TextFontSize}" />
                                        <telerik:RadComboBox SelectedItem="{Binding SelCtrlUnit, Mode=TwoWay}"
                                                             ItemsSource="{Binding DataContext.CtrlUnits,ElementName=ManageItemView}"
                                                             Height="{StaticResource ControlHeight}"
                                                             SelectedValuePath="Id"
                                                             MinWidth="60"
                                                             ItemTemplate="{StaticResource CtrlUnitsTemplate}" />
                                        <TextBlock Text="处于最小间隔"
                                                   VerticalAlignment="Center"
                                                   FontSize="{StaticResource TextFontSize}" />
                                        <TextBox Text="{Binding Min,Mode=TwoWay}"
                                                 VerticalAlignment="Center"
                                                 MinWidth="30"
                                                 FontSize="{StaticResource TextFontSize}" />
                                        <TextBlock Text="和最大间隔"
                                                   VerticalAlignment="Center"
                                                   FontSize="{StaticResource TextFontSize}" />
                                        <TextBox Text="{Binding Max,Mode=TwoWay}"
                                                 MinWidth="30"
                                                 VerticalAlignment="Center"
                                                 FontSize="{StaticResource TextFontSize}" />
                                        <TextBlock Text="之间时"
                                                   VerticalAlignment="Center"
                                                   FontSize="{StaticResource TextFontSize}" />
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal"
                                                Grid.Column="0"
                                                Visibility="{Binding SecondVisible}">
                                        <TextBlock Text="自"
                                                   Margin="2,0,0,0"
                                                   VerticalAlignment="Center"
                                                   FontSize="{StaticResource TextFontSize}" />
                                        <telerik:RadTimePicker InputMode="DatePicker"
                                                               SelectedValue="{Binding StartDate, Mode=TwoWay}" />
                                        <TextBlock Text="起，"
                                                   VerticalAlignment="Center"
                                                   FontSize="{StaticResource TextFontSize}" />
                                        <telerik:RadComboBox SelectedItem="{Binding SelCtrlUnit, Mode=TwoWay}"
                                                             ItemsSource="{Binding DataContext.CtrlUnits,ElementName=ManageItemView}"
                                                             Height="{StaticResource ControlHeight}"
                                                             SelectedValuePath="Id"
                                                             MinWidth="60"
                                                             ItemTemplate="{StaticResource CtrlUnitsTemplate}" />
                                        <TextBlock Text="达到基准间隔"
                                                   VerticalAlignment="Center"
                                                   FontSize="{StaticResource TextFontSize}" />
                                        <TextBox Text="{Binding Standard,Mode=TwoWay}"
                                                 VerticalAlignment="Center"
                                                 MinWidth="30"
                                                 FontSize="{StaticResource TextFontSize}" />
                                        <TextBlock Text="之前（浮动比率为"
                                                   VerticalAlignment="Center"
                                                   FontSize="{StaticResource TextFontSize}" />
                                        <TextBox Text="{Binding Rate,Mode=TwoWay,StringFormat={StaticResource RateStringFormat}}"
                                                 MinWidth="30"
                                                 VerticalAlignment="Center"
                                                 FontSize="{StaticResource TextFontSize}" />
                                        <TextBlock Text="）"
                                                   VerticalAlignment="Center"
                                                   FontSize="{StaticResource TextFontSize}" />
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal"
                                                Grid.Column="0"
                                                Visibility="{Binding ThirdVisible}">
                                        <TextBlock Text="自"
                                                   Margin="2,0,0,0"
                                                   VerticalAlignment="Center"
                                                   FontSize="{StaticResource TextFontSize}" />
                                        <telerik:RadTimePicker InputMode="DatePicker"
                                                               SelectedValue="{Binding StartDate, Mode=TwoWay}" />
                                        <TextBlock Text="起，"
