                                                 FontSize="{StaticResource TextFontSize}" />
                                        <TextBlock Text="之前"
                                                   VerticalAlignment="Center"
                                                   FontSize="{StaticResource TextFontSize}" />
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal"
                                                Grid.Column="0"
                                                Visibility="{Binding FourVisible}">
                                        <TextBlock Text="自上一次"
                                                   Margin="2,0,0,0"
                                                   VerticalAlignment="Center"
                                                   FontSize="{StaticResource TextFontSize}" />
                                        <telerik:RadComboBox SelectedItem="{Binding SelMaintainWork, Mode=TwoWay}"
                                                             ItemsSource="{Binding DataContext.MaintainWorks,ElementName=ManageItemView}"
                                                             Height="{StaticResource ControlHeight}"
                                                             SelectedValuePath="Id"
                                                             MinWidth="60"
                                                             DisplayMemberPath="WorkCode" />
                                        <TextBlock Text="起，"
                                                   VerticalAlignment="Center"
                                                   FontSize="{StaticResource TextFontSize}" />
                                        <telerik:RadComboBox SelectedItem="{Binding SelCtrlUnit, Mode=TwoWay}"
                                                             ItemsSource="{Binding DataContext.CtrlUnits,ElementName=ManageItemView}"
                                                             Height="{StaticResource ControlHeight}"
                                                             SelectedValuePath="Id"
                                                             MinWidth="60"
                                                             ItemTemplate="{StaticResource CtrlUnitsTemplate}" />
                                        <TextBlock Text="处于最小间隔"
                                                   VerticalAlignment="Center"
                                                   FontSize="{StaticResource TextFontSize}" />
                                        <TextBox Text="{Binding Min,Mode=TwoWay}"
                                                 VerticalAlignment="Center"
                                                 MinWidth="30"
                                                 FontSize="{StaticResource TextFontSize}" />
                                        <TextBlock Text="和最大间隔"
                                                   VerticalAlignment="Center"
                                                   FontSize="{StaticResource TextFontSize}" />
                                        <TextBox Text="{Binding Max,Mode=TwoWay}"
                                                 MinWidth="30"
                                                 VerticalAlignment="Center"
                                                 FontSize="{StaticResource TextFontSize}" />
                                        <TextBlock Text="之间时"
                                                   VerticalAlignment="Center"
                                                   FontSize="{StaticResource TextFontSize}" />
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal"
                                                Grid.Column="0"
                                                Visibility="{Binding FiveVisible}">
                                        <TextBlock Text="自上一次"
                                                   Margin="2,0,0,0"
                                                   VerticalAlignment="Center"
                                                   FontSize="{StaticResource TextFontSize}" />
                                        <telerik:RadComboBox SelectedItem="{Binding SelMaintainWork, Mode=TwoWay}"
                                                             ItemsSource="{Binding DataContext.MaintainWorks,ElementName=ManageItemView}"
                                                             Height="{StaticResource ControlHeight}"
                                                             SelectedValuePath="Id"
                                                             MinWidth="60"
                                                             DisplayMemberPath="WorkCode" />
                                        <TextBlock Text="起，"
                                                   VerticalAlignment="Center"
                                                   FontSize="{StaticResource TextFontSize}" />
                                        <telerik:RadComboBox SelectedItem="{Binding SelCtrlUnit, Mode=TwoWay}"
                                                             ItemsSource="{Binding DataContext.CtrlUnits,ElementName=ManageItemView}"
                                                             Height="{StaticResource ControlHeight}"
                                                             SelectedValuePath="Id"
                                                             MinWidth="60"
                                                             ItemTemplate="{StaticResource CtrlUnitsTemplate}" />
                                        <TextBlock Text="达到基准间隔"
                                                   VerticalAlignment="Center"
                                                   FontSize="{StaticResource TextFontSize}" />
                                        <TextBox Text="{Binding Standard,Mode=TwoWay}"
                                                 VerticalAlignment="Center"
                                                 MinWidth="30"
                                                 FontSize="{StaticResource TextFontSize}" />
                                        <TextBlock Text="之前（浮动比率为"
                                                   VerticalAlignment="Center"
                                                   FontSize="{StaticResource TextFontSize}" />
                                        <TextBox Text="{Binding Rate,Mode=TwoWay,StringFormat={StaticResource RateStringFormat}}"
                                                 MinWidth="30"
                                                 VerticalAlignment="Center"
                                                 FontSize="{StaticResource TextFontSize}" />
                                        <TextBlock Text="）"
                                                   VerticalAlignment="Center"
                                                   FontSize="{StaticResource TextFontSize}" />
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal"
                                                Grid.Column="0"
                                                Visibility="{Binding SixVisible}">
                                        <TextBlock Text="自上一次"
                                                   Margin="2,0,0,0"
                                                   VerticalAlignment="Center"
                                                   FontSize="{StaticResource TextFontSize}" />
                                        <telerik:RadComboBox SelectedItem="{Binding SelMaintainWork, Mode=TwoWay}"
                                                             ItemsSource="{Binding DataContext.MaintainWorks,ElementName=ManageItemView}"
                                                             Height="{StaticResource ControlHeight}"
                                                             SelectedValuePath="Id"
                                                             MinWidth="60"
                                                             DisplayMemberPath="WorkCode" />
                                        <TextBlock Text="起，"
                                                   VerticalAlignment="Center"
                                                   FontSize="{StaticResource TextFontSize}" />
                                        <telerik:RadComboBox SelectedItem="{Binding SelCtrlUnit, Mode=TwoWay}"
                                                             ItemsSource="{Binding DataContext.CtrlUnits,ElementName=ManageItemView}"
                                                             Height="{StaticResource ControlHeight}"
                                                             SelectedValuePath="Id"
                                                             MinWidth="60"
                                                             ItemTemplate="{StaticResource CtrlUnitsTemplate}" />
                                        <TextBlock Text="达到基准间隔"
                                                   VerticalAlignment="Center"
                                                   FontSize="{StaticResource TextFontSize}" />
                                        <TextBox Text="{Binding Standard,Mode=TwoWay}"
                                                 VerticalAlignment="Center"
                                                 MinWidth="30"
                                                 FontSize="{StaticResource TextFontSize}" />
                                        <TextBlock Text="之前"
                                                   VerticalAlignment="Center"
                                                   FontSize="{StaticResource TextFontSize}" />
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal"
                                                Grid.Column="0"
                                                Visibility="{Binding SevenVisible}">
                                        <telerik:RadComboBox SelectedValue="{Binding SelSnType, Mode=TwoWay}"
                                                             ItemsSource="{Binding DataContext.SinceNewTypes,ElementName=ManageItemView}"
                                                             Height="{StaticResource ControlHeight}"
                                                             SelectedValuePath="Value"
                                                             MinWidth="30"
                                                             Margin="5,0,0,0"
                                                             DisplayMemberPath="Value"/>
                                        <TextBlock Text="处于最小间隔"
                                                   VerticalAlignment="Center"
                                                   FontSize="{StaticResource TextFontSize}" />
                                        <TextBox Text="{Binding Min,Mode=TwoWay}"
                                                 VerticalAlignment="Center"
