                                                   VerticalAlignment="Center"
                                                   FontSize="{StaticResource TextFontSize}" />
                                    </StackPanel>

                                    <telerik:RadButton Margin="2,2,2,-2"
                                                       Grid.Column="1"
                                                       Visibility="{Binding ButtonVisible}"
                                                       Command="{Binding AddCtrlLineCommand}"
                                                       Background="WhiteSmoke">
                                        <Image Source="/UniCloud.Presentation;component/Images/Down.png"
                                               Stretch="Fill"
                                               ToolTipService.ToolTip="移除维修控制" />
                                    </telerik:RadButton>
                                </Grid>
                                <telerik:GroupBox Header="附件项维修控制明细"
                                                  Grid.Row="2">
                                    <ScrollViewer VerticalScrollBarVisibility="Auto"
                                                  BorderThickness="0"
                                                  HorizontalScrollBarVisibility="Disabled"
                                                  telerik:StyleManager.Theme="Windows8">
                                        <telerik:RadListBox BorderThickness="0"
                                                            ItemsSource="{Binding CtrlLines,Mode=TwoWay}"
                                                            SelectedItem="{Binding SelCtrlLine}">
                                            <telerik:RadListBox.ItemTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal">
                                                        <telerik:RadButton VerticalAlignment="Center"
                                                                           BorderThickness="0"
                                                                           Background="Transparent"
                                                                           Command="{Binding DataContext.RemoveCtrlLineCommand, ElementName=ManageItemView}">
                                                            <Image Source="/UniCloud.Presentation;component/Images/DeleteRed.png"
                                                                   ToolTipService.ToolTip="移除控制明细" />
                                                        </telerik:RadButton>
                                                        <TextBlock Text="{Binding Description}" />
                                                    </StackPanel>
                                                </DataTemplate>
                                            </telerik:RadListBox.ItemTemplate>
                                        </telerik:RadListBox>
                                    </ScrollViewer>
                                </telerik:GroupBox>
                            </Grid>
                        </telerik:RadPane>
                    </telerik:RadPaneGroup>
                </telerik:RadSplitContainer>
            </telerik:RadSplitContainer>
        </telerik:RadDocking>
    </Grid>
</UserControl>