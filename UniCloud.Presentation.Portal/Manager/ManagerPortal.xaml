                                              Stretch="Fill"
                                              Fill="White"
                                              Stroke="Gray"
                                              StrokeThickness="1" />
                                        <StackPanel Margin="5,3,5,10">
                                            <TextBlock Text="{Binding Path=DataItem.DateTime, StringFormat={StaticResource DateStringFormat}}"
                                                       Foreground="Black"
                                                       FontFamily="Segoe UI"
                                                       FontSize="11" />
                                            <TextBlock Text="{Binding Path=DataItem.Maintain, StringFormat='维护: \{0:N2\}'}"
