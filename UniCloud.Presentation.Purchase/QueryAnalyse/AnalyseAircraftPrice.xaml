<UserControl x:Class="UniCloud.Presentation.Purchase.QueryAnalyse.AnalyseAircraftPrice"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:uc="http://schemas.unicloud.com/2012/xaml/presentation"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance uc:AnalyseAircraftPriceVm}"
             d:DesignHeight="300"
             d:DesignWidth="400">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/UniCloud.Presentation;component/Resources/UcStyles.xaml" />
                <ResourceDictionary Source="/Telerik.Windows.Themes.Windows8;component/Themes/System.Windows.xaml" />
                <ResourceDictionary Source="/Telerik.Windows.Themes.Windows8;component/Themes/Telerik.Windows.Controls.xaml" />
                <ResourceDictionary Source="/Telerik.Windows.Themes.Windows8;component/Themes/Telerik.Windows.Controls.Input.xaml" />
                <ResourceDictionary Source="/Telerik.Windows.Themes.Windows8;component/Themes/Telerik.Windows.Controls.Navigation.xaml" />
                <ResourceDictionary Source="/Telerik.Windows.Themes.Windows8;component/Themes/Telerik.Windows.Controls.Data.xaml" />
                <ResourceDictionary Source="/Telerik.Windows.Themes.Windows8;component/Themes/Telerik.Windows.Controls.Docking.xaml" />
                <ResourceDictionary Source="/Telerik.Windows.Themes.Windows8;component/Themes/Telerik.Windows.Controls.Chart.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <Style x:Key="trackBallLineStyle"
                   TargetType="Polyline">
                <Setter Property="Visibility"
                        Value="Collapsed" />
            </Style>
            <Style x:Key="trackBallInfoStyle"
                   TargetType="telerik:TrackBallInfoControl">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="telerik:TrackBallInfoControl" />
                    </Setter.Value>
                </Setter>
            </Style>
            <DataTemplate x:Key="trackBallTemplate">
                <Ellipse Height="8"
                         Width="8"
                         Stroke="White"
                         StrokeThickness="1"
                         Fill="#1B9DDE" />
            </DataTemplate>
        </ResourceDictionary>
    </UserControl.Resources>

    <telerik:RadTileView x:Name="myTileView"
                         ColumnWidth="Auto"
                         IsItemsSizeInPercentages="True"
                         MinimizedColumnWidth="250"
                         PreservePositionWhenMaximized="true"
                         RowHeight="Auto"
                         MinimizedRowHeight="Auto"
                         MaximizeMode="One"
                         telerik:TileViewPanel.IsColumnsShrinkEnabled="True"
                         telerik:TileViewPanel.IsRowsShrinkEnabled="True"
                         telerik:TileViewPanel.IsSizeBoundToPosition="True">
        <telerik:RadTileViewItem Header="总体趋势"
                                 RestoredHeight="62"
                                 MinimizedHeight="164"
                                 RestoredWidth="18">
            <Grid x:Name="LayoutRoot1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="2*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0"
                            Orientation="Horizontal"
                            Margin="12,6,0,20">
                    <TextBlock  Foreground="#767676">
                <Run Text="日期:" />
                <Run x:Name="date"
                        Text="Mar 18, 2012" />
                    </TextBlock>
                    <TextBlock Margin="10,0,0,0"
                               Foreground="#767676">
                <Run Text="价格:" />
                <Run x:Name="price"
                        Text="600.40" />
                    </TextBlock>
                </StackPanel>

                <telerik:RadCartesianChart Grid.Row="1"
                                           Margin="10,10,10,15"
                                           Zoom="{Binding Zoom, Mode=TwoWay}"
                                           PanOffset="{Binding PanOffset, Mode=TwoWay}"
                                           TrackBallLineStyle="{StaticResource trackBallLineStyle}"
                                           TrackBallInfoStyle="{StaticResource trackBallInfoStyle}">
                    <telerik:RadCartesianChart.Behaviors>
                        <telerik:ChartTrackBallBehavior ShowIntersectionPoints="True"
                                                        TrackInfoUpdated="TotalChartTrackBallBehavior_TrackInfoUpdated" />
                    </telerik:RadCartesianChart.Behaviors>
                    <telerik:LineSeries ItemsSource="{Binding Data}"
                                        CategoryBinding="Date"
                                        ValueBinding="Close"
                                        Stroke="#FF25A0DA"
                                        StrokeThickness="2"
                                        TrackBallTemplate="{StaticResource trackBallTemplate}">
                    </telerik:LineSeries>
                    <telerik:RadCartesianChart.HorizontalAxis>
                        <telerik:DateTimeCategoricalAxis DateTimeComponent="Ticks"
                                                         PlotMode="OnTicks"
                                                         MajorTickInterval="30"
                                                         ShowLabels="False"/>
                    </telerik:RadCartesianChart.HorizontalAxis>
                    <telerik:RadCartesianChart.VerticalAxis>
                        <telerik:LinearAxis Minimum="460"
                                            Maximum="680"
                                            MajorStep="20" />
                    </telerik:RadCartesianChart.VerticalAxis>
                    <telerik:RadCartesianChart.Grid>
                        <telerik:CartesianChartGrid StripLinesVisibility="None"
                                                    MajorLinesVisibility="XY">
                            <telerik:CartesianChartGrid.YStripeBrushes>
                                <SolidColorBrush Color="#FFD7D7D7"
                                                 Opacity="0.3" />
                                <SolidColorBrush Color="Transparent" />
                            </telerik:CartesianChartGrid.YStripeBrushes>
                        </telerik:CartesianChartGrid>
                    </telerik:RadCartesianChart.Grid>
                </telerik:RadCartesianChart>

                <telerik:RadCartesianChart Grid.Row="2"
                                           Margin="10,11,10,0"
                                           Zoom="{Binding Zoom, Mode=TwoWay}"
                                           PanOffset="{Binding PanOffset, Mode=TwoWay}">
                    <telerik:RadCartesianChart.Behaviors>
                        <telerik:ChartPanAndZoomBehavior ZoomMode="Horizontal" />
                    </telerik:RadCartesianChart.Behaviors>
                    <telerik:BarSeries ItemsSource="{Binding Data}"
                                       CategoryBinding="Date"
                                       ValueBinding="Volume">
                        <telerik:BarSeries.PointTemplate>
                            <DataTemplate>
                                <Border Background="#FF25A0DA" />
                            </DataTemplate>
                        </telerik:BarSeries.PointTemplate>
                    </telerik:BarSeries>
                    <telerik:RadCartesianChart.HorizontalAxis>
                        <telerik:DateTimeCategoricalAxis DateTimeComponent="Ticks"
                                                         PlotMode="OnTicks"
                                                         MajorTickInterval="30"
                                                         LabelFormat="MMM d" />
                    </telerik:RadCartesianChart.HorizontalAxis>
                    <telerik:RadCartesianChart.VerticalAxis>
                        <telerik:LinearAxis LabelFormat="0,,"
                                            MajorStep="5000000"
                                            Minimum="0"
                                            Maximum="15000000" />
                    </telerik:RadCartesianChart.VerticalAxis>
                    <telerik:RadCartesianChart.Grid>
                        <telerik:CartesianChartGrid StripLinesVisibility="None"
                                                    MajorLinesVisibility="XY">
                            <telerik:CartesianChartGrid.YStripeBrushes>
                                <SolidColorBrush Color="#FFD7D7D7"
                                                 Opacity="0.3" />
                                <SolidColorBrush Color="Transparent" />
                            </telerik:CartesianChartGrid.YStripeBrushes>
                        </telerik:CartesianChartGrid>
                    </telerik:RadCartesianChart.Grid>
                </telerik:RadCartesianChart>
            </Grid>
        </telerik:RadTileViewItem>
        <telerik:RadTileViewItem Header="引进方式"
                                 RestoredHeight="62"
                                 MinimizedHeight="164"
                                 RestoredWidth="18">
            <Grid x:Name="LayoutRoot">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="2*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0"
                            Orientation="Horizontal"
                            Margin="12,6,0,20">
                    <TextBlock  Foreground="#767676">
                <Run Text="日期:" />
                <Run x:Name="ImportDate"
                        Text="Mar 18, 2012" />
                    </TextBlock>
                    <TextBlock Margin="10,0,0,0"
                               Foreground="#767676">
                <Run Text="采购价格:" />
                <Run x:Name="PurchasePrice"
                        Text="600.40" />
                    </TextBlock>
                    <TextBlock Margin="10,0,0,0"
                               Foreground="#767676">
                <Run Text="租赁价格:" />
                <Run x:Name="LeasePrice"
                        Text="600.40" />
                    </TextBlock>
                    <Rectangle Fill="#FF8EC441"
                               Height="2"
                               Width="15"
                               Margin="0,0,5,0" />
                    <CheckBox Content="购买"
                              Margin="0,0,9,0" />
                    <Rectangle Fill="#FF1B9DDE"
                               Height="2"
                               Width="15"
                               Margin="0,0,5,0" />
                    <CheckBox Content="租赁" />
                </StackPanel>

                <telerik:RadCartesianChart Grid.Row="1"
                                           Margin="10,10,10,15"
                                           Zoom="{Binding Zoom, Mode=TwoWay}"
                                           PanOffset="{Binding PanOffset, Mode=TwoWay}"
                                           TrackBallLineStyle="{StaticResource trackBallLineStyle}"
                                           TrackBallInfoStyle="{StaticResource trackBallInfoStyle}">
                    <telerik:RadCartesianChart.Behaviors>
                        <telerik:ChartTrackBallBehavior ShowIntersectionPoints="True"
                                                        TrackInfoUpdated="ImportTypeChartTrackBallBehavior_TrackInfoUpdated" />
                    </telerik:RadCartesianChart.Behaviors>
                    <telerik:LineSeries ItemsSource="{Binding Data}"
                                        CategoryBinding="Date"
                                        ValueBinding="Close"
                                        Stroke="#FF25A0DA"
                                        StrokeThickness="2"
                                        TrackBallTemplate="{StaticResource trackBallTemplate}">
                        <telerik:LineSeries.VerticalAxis>
                            <telerik:LinearAxis Minimum="460"
                                                Maximum="680"
                                                MajorStep="20"
                                                HorizontalLocation="Right" />
                        </telerik:LineSeries.VerticalAxis>

                    </telerik:LineSeries>
                    <telerik:RadCartesianChart.HorizontalAxis>
                        <telerik:DateTimeCategoricalAxis DateTimeComponent="Ticks"
                                                         PlotMode="OnTicks"
                                                         MajorTickInterval="30"
                                                         ShowLabels="False"/>
                    </telerik:RadCartesianChart.HorizontalAxis>
                    <telerik:RadCartesianChart.VerticalAxis>
                        <telerik:LinearAxis Minimum="460"
                                            Maximum="680"
                                            MajorStep="20" />
                    </telerik:RadCartesianChart.VerticalAxis>
                    <telerik:RadCartesianChart.Grid>
                        <telerik:CartesianChartGrid StripLinesVisibility="None"
                                                    MajorLinesVisibility="XY">
                            <telerik:CartesianChartGrid.YStripeBrushes>
                                <SolidColorBrush Color="#FFD7D7D7"
                                                 Opacity="0.3" />
                                <SolidColorBrush Color="Transparent" />
                            </telerik:CartesianChartGrid.YStripeBrushes>
                        </telerik:CartesianChartGrid>
                    </telerik:RadCartesianChart.Grid>
                </telerik:RadCartesianChart>

            </Grid>
        </telerik:RadTileViewItem>
        <telerik:RadTileViewItem Header="座级"
                                 RestoredHeight="62"
                                 MinimizedHeight="164"
                                 RestoredWidth="18"></telerik:RadTileViewItem>
    </telerik:RadTileView>
</UserControl>
