<UserControl x:Class="UniCloud.Presentation.Purchase.Reception.AircraftLeaseReceptionManager"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:uc="http://schemas.unicloud.com/2012/xaml/presentation"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ei="http://schemas.microsoft.com/expression/2010/interactions"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:input="clr-namespace:UniCloud.Presentation.Input;assembly=UniCloud.Presentation"
             xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
             mc:Ignorable="d"
             d:DesignHeight="600"
             d:DesignWidth="800"
             d:DataContext="{d:DesignInstance uc:AircraftLeaseReceptionManagerVM}">

    <UserControl.Resources>
        <ResourceDictionary>
            <Style x:Key="EditComboBox"
                   TargetType="telerik:RadComboBox">
                <Setter Property="FontFamily"
                        Value="Microsoft YaHei UI" />
                <Setter Property="FontSize"
                        Value="13" />
                <Setter Property="VerticalAlignment"
                        Value="Center" />
                <Setter Property="OpenDropDownOnFocus"
                        Value="True" />
            </Style>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/UniCloud.Presentation;component/Resources/UcStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <telerik:RadToolBar HorizontalAlignment="Stretch"
                            Margin="-1 -2 -1 0">
            <telerik:RadButton Margin="4,2,2,-2"
                               Command="{Binding SaveCommand}"
                               CommandParameter="{Binding AircraftLeaseReceptions}">
                <Image Source="/UniCloud.Presentation;component/Images/Save.png"
                       Stretch="Fill"
                       ToolTipService.ToolTip="保存" />
            </telerik:RadButton>
            <telerik:RadButton Margin="2,2,2,-2"
                               Command="{Binding AbortCommand}"
                               CommandParameter="{Binding AircraftLeaseReceptions}">
                <Image Source="/UniCloud.Presentation;component/Images/Rotate.png"
                       Stretch="Fill"
                       ToolTipService.ToolTip="放弃更改" />
            </telerik:RadButton>
            <telerik:RadToolBarSeparator />
            <telerik:RadButton Margin="2,2,2,-2"
                               Command="{Binding NewCommand}">
                <Image Source="/UniCloud.Presentation;component/Images/Add.png"
                       Stretch="Fill"
                       ToolTipService.ToolTip="新增采购飞机接收项目" />
            </telerik:RadButton>
            <telerik:RadButton Margin="2,2,2,-2"
                               Command="{Binding RemoveCommand}">
                <Image Source="/UniCloud.Presentation;component/Images/Remove.png"
                       Stretch="Fill"
                       ToolTipService.ToolTip="删除采购飞机接收项目" />
            </telerik:RadButton>
        </telerik:RadToolBar>

        <telerik:RadDocking  Grid.Row="1"
                             BorderThickness="0"
                             Padding="0"
                             HasDocumentHost="False"
                             telerik:ProportionalStackPanel.RelativeSize="500,600"
                             FlowDirection="LeftToRight">
            <telerik:RadSplitContainer Orientation="Horizontal">
                <telerik:RadSplitContainer Orientation="Vertical"
                                           telerik:ProportionalStackPanel.RelativeSize="500, 600">
                    <telerik:RadPaneGroup>
                        <telerik:RadPane Header="租赁飞机接机项目"
                                         HorizontalAlignment="Left"
                                         CanDockInDocumentHost="True"
                                         CanFloat="False"
                                         CanUserClose="False"
                                         CanUserPin="False">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <telerik:RadGridView x:Name="Reception"
                                                     AutoExpandGroups="True"
                                                     ShowGroupPanel="True"
                                                     AutoGenerateColumns="False"
                                                     CanUserSortColumns="True"
                                                     ItemsSource="{Binding AircraftLeaseReceptions,Mode=TwoWay}"
                                                     SelectedItem="{Binding SelAircraftLeaseReception,Mode=TwoWay}"
                                                     CanUserFreezeColumns="False"
                                                     RowIndicatorVisibility="Collapsed"
                                                     RowDetailsVisibilityMode="VisibleWhenSelected"
                                                     CanUserResizeColumns="False"
                                                     IsFilteringAllowed="True"
                                                     IsReadOnly="False"
                                                     IsBusy="{Binding AircraftLeaseReceptions.IsBusy}">
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="CellEditEnded">
                                            <i:InvokeCommandAction Command="{Binding CellEditEndCommand}"
                                                                   CommandParameter="{Binding ElementName=Reception}" />
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                    <telerik:RadContextMenu.ContextMenu>
                                        <telerik:RadContextMenu>
                                            <telerik:RadMenuItem Header="导出Excel"
                                                                 Command="{Binding ExcelExportCommand}"
                                                                 CommandParameter="{Binding ElementName=AircraftLeaseReceptions, Mode=OneWay}" />
                                            <telerik:RadMenuItem Header="导出Word"
                                                                 Command="{Binding WordExportCommand}"
                                                                 CommandParameter="{Binding ElementName=AircraftLeaseReceptions, Mode=OneWay}" />
                                        </telerik:RadContextMenu>
                                    </telerik:RadContextMenu.ContextMenu>
                                    <telerik:RadGridView.Columns>
                                        <input:DataPageSerialColumn Header="序号"
                                                                    HeaderTextAlignment="Center" />
                                        <telerik:GridViewDataColumn Header="接机编号"
                                                                    IsReadOnly="True"
                                                                    HeaderTextAlignment="Center"
                                                                    MinWidth="{StaticResource GridViewColumnsWidth}"
                                                                    DataMemberBinding="{Binding ReceptionNumber}" />
                                        <telerik:GridViewComboBoxColumn Header="供应商"
                                                                        HeaderTextAlignment="Center"
                                                                        MinWidth="{StaticResource GridViewColumnsWidth}"
                                                                        IsFilterable="True"
                                                                        ItemsSource="{Binding DataContext.Suppliers, RelativeSource={RelativeSource AncestorLevel=1,AncestorType=UserControl}}"
                                                                        DisplayMemberPath="Name"
                                                                        DataMemberBinding="{Binding SupplierId,Mode=TwoWay}"
                                                                        SelectedValueMemberPath="SupplierId"
                                                                        EditorStyle="{StaticResource EditComboBox}"
                                                                        UniqueName="Supplier">
                                        </telerik:GridViewComboBoxColumn>
                                        <telerik:GridViewDataColumn Header="交付起始时间"
                                                                    HeaderTextAlignment="Center"
                                                                    MinWidth="{StaticResource GridViewColumnsWidth}"
                                                                    DataMemberBinding="{Binding StartDate}"
                                                                    DataFormatString="{StaticResource DateStringFormat}" />
                                        <telerik:GridViewDataColumn Header="交付截止时间"
                                                                    HeaderTextAlignment="Center"
                                                                    MinWidth="{StaticResource GridViewColumnsWidth}"
                                                                    DataMemberBinding="{Binding EndDate}"
                                                                    DataFormatString="{StaticResource DateStringFormat}" />
                                        <telerik:GridViewDataColumn Header="创建日期"
                                                                    HeaderTextAlignment="Center"
                                                                    MinWidth="{StaticResource GridViewColumnsWidth}"
                                                                    DataMemberBinding="{Binding CreateDate}"
                                                                    DataFormatString="{StaticResource DateStringFormat}" />
                                        <telerik:GridViewDataColumn Header="是否关闭"
                                                                    IsReadOnly="True"
                                                                    HeaderTextAlignment="Center"
                                                                    MinWidth="{StaticResource GridViewColumnsWidth}"
                                                                    DataMemberBinding="{Binding IsClosed}" />
                                        <telerik:GridViewDataColumn Header="关闭日期"
                                                                    HeaderTextAlignment="Center"
                                                                    MinWidth="{StaticResource GridViewColumnsWidth}"
                                                                    DataMemberBinding="{Binding CloseDate}"
                                                                    DataFormatString="{StaticResource DateStringFormat}" />
                                        <telerik:GridViewDataColumn Header="描述"
                                                                    HeaderTextAlignment="Center"
                                                                    MinWidth="{StaticResource GridViewColumnsWidth}"
                                                                    DataMemberBinding="{Binding Description}" />
                                    </telerik:RadGridView.Columns>
                                </telerik:RadGridView>
                                <telerik:RadDataPager BorderThickness="1,0,1,1"
                                                      AutoEllipsisMode="Both"
                                                      DisplayMode="All"
                                                      Source="{Binding AircraftLeaseReceptions}"
                                                      Grid.Row="1" />
                            </Grid>
                        </telerik:RadPane>
                    </telerik:RadPaneGroup>
                    <telerik:RadPaneGroup VerticalAlignment="Stretch">
                        <telerik:RadPane Header="交付项"
                                         CanDockInDocumentHost="True"
                                         IsPinned="true"
                                         CanFloat="False"
                                         CanUserClose="False"
                                         CanUserPin="True"
                                         FontSize="{StaticResource TextFontSize}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <StackPanel Grid.Row="0"
                                            Orientation="Horizontal"
                                            HorizontalAlignment="Left">
                                    <Button Style="{StaticResource CafmToolButtonStyle}"
                                            ToolTipService.ToolTip="添加接收行"
                                            Command="{Binding AddEntityCommand}">
                                        <Image Stretch="Fill"
                                               Source="/UniCloud.Presentation;component/Images/Add.png" />
                                    </Button>
                                    <Button Style="{StaticResource CafmToolButtonStyle}"
                                            ToolTipService.ToolTip="移除接收行"
                                            Command="{Binding RemoveEntityCommand}">
                                        <Image Stretch="Fill"
                                               Source="/UniCloud.Presentation;component/Images/Remove.png" />
                                    </Button>
                                </StackPanel>
                                <telerik:RadGridView x:Name="ReceptionLines"
                                                     ShowGroupPanel="False"
                                                     AutoExpandGroups="True"
                                                     IsReadOnly="False"
                                                     Grid.Row="1"
                                                     CanUserFreezeColumns="False"
                                                     RowIndicatorVisibility="Collapsed"
                                                     CanUserResizeColumns="False"
                                                     IsFilteringAllowed="False"
                                                     ItemsSource="{Binding SelAircraftLeaseReception.ReceptionLines}"
                                                     SelectedItem="{Binding SelAircraftLeaseReceptionLine,Mode=TwoWay}"
                                                     AutoGenerateColumns="False"
                                                     ShowColumnFooters="True">
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="CellEditEnded">
                                            <i:InvokeCommandAction Command="{Binding CellEditEndCommand}"
                                                                   CommandParameter="{Binding ElementName=ReceptionLines}" />
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                    <telerik:RadContextMenu.ContextMenu>
                                        <telerik:RadContextMenu>
                                            <telerik:RadMenuItem Header="导出Excel"
                                                                 Command="{Binding ExcelExportCommand}"
                                                                 CommandParameter="{Binding ElementName=SelAircraftLeaseReception.ReceptionLines, Mode=OneWay}" />
                                            <telerik:RadMenuItem Header="导出Word"
                                                                 Command="{Binding WordExportCommand}"
                                                                 CommandParameter="{Binding ElementName=SelAircraftLeaseReception.ReceptionLines, Mode=OneWay}" />
                                        </telerik:RadContextMenu>
                                    </telerik:RadContextMenu.ContextMenu>
                                    <telerik:RadGridView.Columns>
                                        <input:DataPageSerialColumn Header="序号"
                                                                    HeaderTextAlignment="Center" />
                                        <telerik:GridViewDataColumn Header="交付数量"
                                                                    HeaderTextAlignment="Center"
                                                                    MinWidth="{StaticResource GridViewColumnsWidth}"
                                                                    DataMemberBinding="{Binding ReceivedAmount}"/>
                                        <telerik:GridViewDataColumn Header="实际接收数量"
                                                                    HeaderTextAlignment="Center"
                                                                    MinWidth="{StaticResource GridViewColumnsWidth}"
                                                                    DataMemberBinding="{Binding AcceptedAmount}" />
                                        <telerik:GridViewDataColumn Header="交付时间"
                                                                    HeaderTextAlignment="Center"
                                                                    MinWidth="{StaticResource GridViewColumnsWidth}"
                                                                    DataMemberBinding="{Binding DeliverDate}"
                                                                    DataFormatString="{StaticResource DateStringFormat}" />
                                        <telerik:GridViewDataColumn Header="交付地点"
                                                                    HeaderTextAlignment="Center"
                                                                    MinWidth="{StaticResource GridViewColumnsWidth}"
                                                                    DataMemberBinding="{Binding DeliverPlace}" />
                                        <telerik:GridViewComboBoxColumn Header="合同号"
                                                                        HeaderTextAlignment="Center"
                                                                        MinWidth="{StaticResource GridViewColumnsWidth}"
                                                                        IsFilterable="True"
                                                                        ItemsSourceBinding="{Binding DataContext.ViewAircraftContracts, RelativeSource={RelativeSource AncestorLevel=1,AncestorType=UserControl}}"
                                                                        DisplayMemberPath="Number"
                                                                        DataMemberBinding="{Binding ContractNumber,Mode=TwoWay}"
                                                                        SelectedValueMemberPath="Number"
                                                                        EditorStyle="{StaticResource EditComboBox}"
                                                                        UniqueName="ContractNumber"/>
                                        <telerik:GridViewComboBoxColumn Header="Rank号"
                                                                        IsReadOnly="{Binding CanEdit}"
                                                                        HeaderTextAlignment="Center"
                                                                        MinWidth="{StaticResource GridViewColumnsWidth}"
                                                                        IsFilterable="True"
                                                                        ItemsSourceBinding="{Binding ViewLeaseContractAircrafts}"
                                                                        DisplayMemberPath="RankNumber"
                                                                        DataMemberBinding="{Binding ContractAircraftId,Mode=TwoWay}"
                                                                        SelectedValueMemberPath="LeaseContractAircraftId"
                                                                        EditorStyle="{StaticResource EditComboBox}"
                                                                        UniqueName="ContractAircraft" />
                                        <telerik:GridViewDataColumn Header="序列号"
                                                                    IsReadOnly="True"
                                                                    HeaderTextAlignment="Center"
                                                                    MinWidth="{StaticResource GridViewColumnsWidth}"
                                                                    DataMemberBinding="{Binding MSN,Mode=TwoWay}" />
                                        <telerik:GridViewDataColumn Header="机型"
                                                                    IsReadOnly="True"
                                                                    HeaderTextAlignment="Center"
                                                                    MinWidth="{StaticResource GridViewColumnsWidth}"
                                                                    DataMemberBinding="{Binding AircraftType,Mode=TwoWay}" />
                                        <telerik:GridViewDataColumn Header="是否完成"
                                                                    HeaderTextAlignment="Center"
                                                                    MinWidth="{StaticResource GridViewColumnsWidth}"
                                                                    DataMemberBinding="{Binding IsCompleted}" />
                                        <telerik:GridViewDataColumn Header="描述"
                                                                    HeaderTextAlignment="Center"
                                                                    MinWidth="{StaticResource GridViewColumnsWidth}"
                                                                    DataMemberBinding="{Binding Note}" />
                                    </telerik:RadGridView.Columns>
                                </telerik:RadGridView>
                                <telerik:RadDataPager BorderThickness="1,0,1,1"
                                                      AutoEllipsisMode="Both"
                                                      DisplayMode="All"
                                                      Source="{Binding SelAircraftLeaseReception.ReceptionLines}"
                                                      Grid.Row="2" />
                            </Grid>
                        </telerik:RadPane>
                        <telerik:RadPane Header="交机文件"
                                         HorizontalAlignment="Left"
                                         CanDockInDocumentHost="True"
                                         CanFloat="False"
                                         CanUserClose="False"
                                         CanUserPin="False">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <StackPanel Grid.Row="0"
                                            Orientation="Horizontal"
                                            HorizontalAlignment="Left">
                                    <Button Style="{StaticResource CafmToolButtonStyle}"
                                            ToolTipService.ToolTip="添加文档"
                                            Command="{Binding AddAttachCommand}">
                                        <Image Stretch="Fill"
                                               Source="/UniCloud.Presentation;component/Images/Add.png" />
                                    </Button>
                                    <Button Style="{StaticResource CafmToolButtonStyle}"
                                            ToolTipService.ToolTip="移除文档"
                                            Command="{Binding ViewAttachCommand}">
                                        <Image Stretch="Fill"
                                               Source="/UniCloud.Presentation;component/Images/Remove.png" />
                                    </Button>
                                </StackPanel>
                                <telerik:RadGridView x:Name="RelatedDocuments"
                                                     Grid.Row="1"
                                                     AutoExpandGroups="True"
                                                     ShowGroupPanel="False"
                                                     AutoGenerateColumns="False"
                                                     CanUserSortColumns="True"
                                                     ItemsSource="{Binding Documents}"
                                                     SelectedItem="{Binding SelDocument, Mode=TwoWay}"
                                                     CanUserFreezeColumns="False"
                                                     RowIndicatorVisibility="Collapsed"
                                                     CanUserResizeColumns="False"
                                                     IsFilteringAllowed="True"
                                                     IsReadOnly="True">
                                    <telerik:RadGridView.Columns>
                                        <input:DataPageSerialColumn Header="序号"
                                                                    HeaderTextAlignment="Center" />
                                        <telerik:GridViewDataColumn Header="标题"
                                                                    IsReadOnly="True"
                                                                    DataMemberBinding="{Binding }"
                                                                    IsFilterable="False" />
                                        <telerik:GridViewColumn Header="附件"
                                                                IsReadOnly="True">
                                            <telerik:GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <HyperlinkButton Content="{Binding }"
                                                                     VerticalAlignment="Center"
                                                                     Command="{Binding }"
                                                                     CommandParameter="{Binding}" />
                                                </DataTemplate>
                                            </telerik:GridViewColumn.CellTemplate>
                                        </telerik:GridViewColumn>
                                    </telerik:RadGridView.Columns>
                                </telerik:RadGridView>
                                <telerik:RadDataPager BorderThickness="1,0,1,1"
                                                      AutoEllipsisMode="Both"
                                                      DisplayMode="All"
                                                      Source="{Binding SelAircraftLeaseReception.Doucments}"
                                                      Grid.Row="2" />
                            </Grid>
                        </telerik:RadPane>
                    </telerik:RadPaneGroup>
                </telerik:RadSplitContainer>
                <telerik:RadSplitContainer Orientation="Horizontal"
                                           InitialPosition="DockedRight"
                                           telerik:ProportionalStackPanel.RelativeSize="500, 600">
                    <telerik:RadPaneGroup>
                        <telerik:RadPane Header="交付日程安排"
                                         CanDockInDocumentHost="True"
                                         IsPinned="true"
                                         CanFloat="False"
                                         CanUserClose="False"
                                         CanUserPin="True"
                                         FontSize="{StaticResource TextFontSize}">
                            <Grid>
                                <telerik:RadScheduleView  Name="RadScheduleView"
                                                          telerik:StyleManager.Theme="Windows8"
                                                          BorderThickness="3"
                                                          SnapAppointments="True"
                                                          AppointmentsSource="{Binding Appointments,Mode=TwoWay}"
                                                          ActiveViewDefinitionIndex="1"
                                                          TimeMarkersSource="{Binding TimeMarkers}"
                                                          CategoriesSource="{Binding Categories}">
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="AppointmentCreated">
                                            <i:InvokeCommandAction Command="{Binding CreateCommand}"
                                                                   CommandParameter="{Binding ElementName=RadScheduleView}" />
                                        </i:EventTrigger>
                                        <i:EventTrigger EventName="AppointmentDeleted">
                                            <i:InvokeCommandAction Command="{Binding DelCommand}"
                                                                   CommandParameter="{Binding ElementName=RadScheduleView}" />
                                        </i:EventTrigger>
                                        <i:EventTrigger EventName="AppointmentEdited">
                                            <i:InvokeCommandAction Command="{Binding EditCommand}"
                                                                   CommandParameter="{Binding ElementName=RadScheduleView}" />
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                    <telerik:RadScheduleView.ResourceTypesSource>
                                        <telerik:ResourceTypeCollection>
                                            <telerik:ResourceType Name="工作组">
                                                <telerik:Resource ResourceName="机队管理组"
                                                                  DisplayName="机队管理组" />
                                                <telerik:Resource ResourceName="机务组"
                                                                  DisplayName="机务组" />
                                                <telerik:Resource ResourceName="后勤组"
                                                                  DisplayName="后勤组" />
                                                <telerik:Resource ResourceName="其他"
                                                                  DisplayName="其他" />
                                            </telerik:ResourceType>
                                        </telerik:ResourceTypeCollection>
                                    </telerik:RadScheduleView.ResourceTypesSource>
                                    <telerik:RadScheduleView.GroupDescriptionsSource>
                                        <telerik:GroupDescriptionCollection>
                                            <telerik:DateGroupDescription />
                                            <telerik:ResourceGroupDescription ResourceType="工作组" />
                                        </telerik:GroupDescriptionCollection>
                                    </telerik:RadScheduleView.GroupDescriptionsSource>
                                    <telerik:RadScheduleView.ViewDefinitions>
                                        <telerik:DayViewDefinition DayStartTime="8:00"
                                                                   DayEndTime="20:00"
                                                                   MajorTickLength="1h"
                                                                   TimerulerMajorTickStringFormat="{}{0:tt h:mm}"
                                                                   Orientation="Vertical" />
                                        <telerik:WeekViewDefinition DayStartTime="8:00"
                                                                    DayEndTime="20:00"
                                                                    MinTimeRulerExtent="1"
                                                                    MajorTickLength="1h"
                                                                    StretchGroupHeaders="True"
                                                                    TimerulerMajorTickStringFormat="{}{0:tt h:mm}"
                                                                    Orientation="Vertical" />
                                        <telerik:MonthViewDefinition GroupHeaderDateStringFormat="{}{0:MMM d} - {1:MMM d}" />
                                        <telerik:TimelineViewDefinition MinTimeRulerExtent="6000"
                                                                        DayStartTime="8:00"
                                                                        DayEndTime="20:00"
                                                                        TimerulerGroupStringFormat="{}{0:yyyy-MM-dd}"
                                                                        TimerulerMajorTickStringFormat="{}{0:tt h:mm}"
                                                                        GroupHeaderDateStringFormat="{}{0:dddd dd}" />
                                    </telerik:RadScheduleView.ViewDefinitions>
                                </telerik:RadScheduleView>
                            </Grid>
                        </telerik:RadPane>
                    </telerik:RadPaneGroup>
                </telerik:RadSplitContainer>
            </telerik:RadSplitContainer>
        </telerik:RadDocking>
    </Grid>
</UserControl>